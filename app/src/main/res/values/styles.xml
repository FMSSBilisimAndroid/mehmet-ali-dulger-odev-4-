<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="get_started_title_style">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:textSize">44sp</item>
    </style>

    <style name="button_style">
        <item name="icon">@drawable/get_stared_rocket</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="button_but_now_style">
        <item name="icon">@drawable/ic_baseline_shopping_cart_24</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="specific_corner_cut_style">
        <item name="cornerSizeBottomLeft">50dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>

        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="title_black_style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title_orange_style">
        <item name="android:textColor">#F9AD1A</item>
    </style>
</resources>